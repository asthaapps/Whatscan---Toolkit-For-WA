<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_sub_emoticon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MsgTools.Emoticon.ActivitySubEmoticon">

    <include
        android:id="@+id/ic_include"
        layout="@layout/content_toolbar_info" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recySubEmoticon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_banner"
        android:layout_below="@+id/ic_include" />

    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />
</RelativeLayout>