<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDevloper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/bt_close"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:contentDescription="@string/app_image_desc"
                android:padding="15dp"
                app:srcCompat="@drawable/ic_close_red" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_mlarge">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile"
                app:riv_border_color="@color/colorTools"
                app:riv_border_width="1dp"
                app:riv_corner_radius="50dp" />

            <TextView
                android:id="@+id/txtOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:maxLines="2"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:text=""
                android:textColor="#9E9E9E"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="www.whatscan.co"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/devloper_desc"
                android:textColor="#9E9E9E" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_middle">

            <TextView
                android:id="@+id/txtThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_my_social_media"
                android:textColor="@color/grey_500" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgWapp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/app_image_desc"
                    app:srcCompat="@drawable/d_wpp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgLinkdin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/app_image_desc"
                    app:srcCompat="@drawable/d_linkdin" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgTwitter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/app_image_desc"
                    app:srcCompat="@drawable/d_twitter" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgFb"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/app_image_desc"
                    app:srcCompat="@drawable/d_fb" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgInsta"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/app_image_desc"
                    app:srcCompat="@drawable/d_insta" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/imgYoutube"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/app_image_desc"
                    app:srcCompat="@drawable/d_you_tube" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>