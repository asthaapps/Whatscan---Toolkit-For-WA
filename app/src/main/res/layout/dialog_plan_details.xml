<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlPermission_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="14dp">

    <LinearLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:padding="10dp"
            android:text="Whatscan Premium Plan"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="All of these featurs are including in this below plan of our application."
            android:textColor="#99000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/regular"
            android:paddingStart="18dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="Remove Ads"
            android:textColor="#99000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="- Remove all your ads from application and enjoy without ads."
            android:textColor="#99000000"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="Bulk Automatic Sending"
            android:textColor="#99000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:paddingBottom="1dp"
            android:text="- Send messages to multiple contact."
            android:textColor="#99000000"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:paddingBottom="1dp"
            android:text="- Reach more people and grow your business."
            android:textColor="#99000000"
            android:textSize="11sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="AutoScheduler"
            android:textColor="#99000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:paddingBottom="1dp"
            android:text="- Send bulk auto schedule a time to daily auto messages."
            android:textColor="#99000000"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:paddingBottom="1dp"
            android:text="- Send a message to your friends with time schedule"
            android:textColor="#99000000"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="Chat Locker"
            android:textColor="#99000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:paddingBottom="1dp"
            android:text="- Keep your Whatsapp chat private."
            android:textColor="#99000000"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="Add Files in bulk sending"
            android:textColor="#99000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:paddingBottom="1dp"
            android:text="- You can add media files to bulk auto sending messages."
            android:textColor="#99000000"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="Auto Replay"
            android:textColor="#99000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:paddingBottom="1dp"
            android:text="- You can build smart replay to create a bot in app."
            android:textColor="#99000000"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="18dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:text="Export WA Contact"
            android:textColor="#99000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:paddingStart="22dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="20dp"
            android:text="- You can export your whatsapp contact via use this."
            android:textColor="#99000000"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>