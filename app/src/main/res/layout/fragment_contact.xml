<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutoResponse.FragmentContact">

    <LinearLayout
        android:id="@+id/contact_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="20.0dip"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center_vertical"
            android:padding="1dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contact_group"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1.0"
                android:background="@color/colorTools"
                android:gravity="center"
                android:text="@string/contacts"
                android:textColor="@color/colorWhite"
                android:textSize="16.0sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/groups_group"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1.0"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="@string/groups_whatstool"
                android:textColor="@color/colorBlack"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/contacts_radio_group"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RadioButton
                    android:id="@+id/everyone_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="10.0dip"
                    android:buttonTint="@color/colorTools"
                    android:gravity="center"
                    android:text="@string/everyone"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/mycontact_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="10.0dip"
                    android:buttonTint="@color/colorTools"
                    android:gravity="center"
                    android:text="@string/my_contact_list"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/exceptcontact_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="10.0dip"
                    android:buttonTint="@color/colorTools"
                    android:gravity="center"
                    android:text="@string/except_my_contact_list"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/nonecontact_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="10.0dip"
                    android:buttonTint="@color/colorTools"
                    android:gravity="center"
                    android:text="@string/none"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/groups_radio_group"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/everyone_group"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="10.0dip"
                    android:buttonTint="@color/colorTools"
                    android:gravity="center"
                    android:text="@string/all_group"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/mygroup_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="10.0dip"
                    android:buttonTint="@color/colorTools"
                    android:gravity="center"
                    android:text="@string/my_group_list"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/exceptgroup_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="10.0dip"
                    android:buttonTint="@color/colorTools"
                    android:gravity="center"
                    android:text="@string/except_my_group_list"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/nonegroup_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="10.0dip"
                    android:buttonTint="@color/colorTools"
                    android:gravity="center"
                    android:text="@string/none"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_layout"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llOne"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10dp"
            android:background="@color/adColor"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/list_info_text"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="20.0dip"
                android:paddingEnd="0dp"
                android:text="@string/contact_list"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/addcontact_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/app_image_desc"
                android:src="@drawable/ic_add"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/info_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/auto_response_to_everyone"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_contact_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>