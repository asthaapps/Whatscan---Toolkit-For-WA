<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear_font"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/back_to_text"
            android:layout_width="30.0dp"
            android:layout_height="30.0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10.0dp"
            android:contentDescription="@string/app_image_desc"
            android:padding="2.0dp"
            android:src="@drawable/ic_back_black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_fonts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_add_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/back_to_main"
            android:layout_width="30.0dp"
            android:layout_height="30.0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10.0dp"
            android:contentDescription="@string/app_image_desc"
            android:padding="2.0dp"
            android:src="@drawable/ic_back_black" />

        <EditText
            android:id="@+id/text_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="Enter Text"
            android:paddingStart="8dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack" />

        <ImageView
            android:id="@+id/text_font"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_image_desc"
            android:padding="7dp"
            app:srcCompat="@drawable/cp_t_style" />

        <ImageView
            android:id="@+id/text_color"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:contentDescription="@string/app_image_desc" />
    </LinearLayout>
</RelativeLayout>