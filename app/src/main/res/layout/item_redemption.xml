<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/shape_redemption">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCouponName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Ad-Free VIP"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtCouponDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="20dp"
                android:text="08 Oct, 2021"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTicket"
        android:layout_width="350dp"
        android:layout_height="440dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/imgOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_image_desc"
            android:scaleType="fitXY"
            android:src="@drawable/ic_ticket_redemption" />

        <TextView
            android:id="@+id/txtActiveExpired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/medium"
            android:layout_marginTop="6dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2.5dp"
            android:paddingBottom="2.5dp"
            android:layout_marginEnd="10dp"
            android:text="Activeted"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rlFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/txtActiveExpired"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/imgAdFeaturs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_image_desc"
                android:src="@drawable/w_bulk" />

            <TextView
                android:id="@+id/txtAdFeaturs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgAdFeaturs"
                android:ellipsize="end"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingTop="8dp"
                android:paddingEnd="20dp"
                android:text="Bulk Sender"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtAdFeatursDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAdFeaturs"
                android:layout_toEndOf="@+id/imgAdFeaturs"
                android:fontFamily="@font/medium"
                android:paddingStart="5dp"
                android:paddingEnd="20dp"
                android:text="Use Tools for 1 day"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlFirst"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtSeven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/txtValidDate"
                android:fontFamily="@font/medium"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Valid Till"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtValidDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:text="08 Oct, 2021"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlThrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlSec"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtEight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/txtRedeemCoin"
                android:fontFamily="@font/medium"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Coins Redeemed"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtRedeemCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imgCoin"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="600"
                android:textAllCaps="true"
                android:textColor="@color/Red"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgCoin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_image_desc"
                android:src="@drawable/iv_coin" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlBottom"
            android:layout_below="@+id/rlThrd"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="5dp"
                android:text="@string/terms_condition"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="5dp"
                android:text="• Valid on all section for whole application"
                android:textColor="#96a2b9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="5dp"
                android:text="• Will expire after the indicated date"
                android:textColor="#96a2b9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="5dp"
                android:text="How to Use Coupon"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="5dp"
                android:text="• After the coupon is redeemed successfully. you will automatically get the right of ad-free view"
                android:textColor="#96a2b9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="5dp"
                android:text="• When using tools, you can use tool without any ads"
                android:textColor="#96a2b9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="5dp"
                android:text=""
                android:textColor="#96a2b9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="5dp"
                android:text=""
                android:textColor="#96a2b9"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_active"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_card"
                android:fontFamily="@font/medium"
                android:text="Active"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>