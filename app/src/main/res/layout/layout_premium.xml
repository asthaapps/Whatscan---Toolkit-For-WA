<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardP"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Whatscan Premium Pack"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp">

            <RelativeLayout
                android:id="@+id/btnMPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMPremiumA"
                android:background="@drawable/selector_item_purchase"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/PreM"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/colorTools"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/txtMonP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/PreM"
                    android:fontFamily="@font/bold"
                    android:gravity="start"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="2dp"
                    android:text="@string/monthly"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtMPremiumP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtMonP"
                    android:layout_toEndOf="@+id/PreM"
                    android:fontFamily="@font/regular"
                    android:maxLines="2"
                    android:paddingStart="20dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="5dp"
                    android:text="@string/billed_monthly"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_red"
                    android:fontFamily="@font/medium"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="4dp"
                    android:text="Save 40%"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtMPremiumA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/button_light"
                android:fontFamily="@font/medium"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@string/plan_active"
                android:textColor="@color/colorWhite"
                android:textSize="11sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <RelativeLayout
                android:id="@+id/btnYPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtYPremiumA"
                android:background="@drawable/selector_item_purchase"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/PreY"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/colorTools"
                    android:checked="true"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/txtYarP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/PreY"
                    android:fontFamily="@font/bold"
                    android:gravity="start"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="2dp"
                    android:scrollbars="vertical"
                    android:text="@string/yearly"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtYPremiumP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtYarP"
                    android:layout_toEndOf="@+id/PreY"
                    android:fontFamily="@font/regular"
                    android:maxLines="2"
                    android:paddingStart="20dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="5dp"
                    android:text="@string/billed_yearly"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_red"
                    android:fontFamily="@font/medium"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="4dp"
                    android:text="Save 40%"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtYPremiumA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/button_light"
                android:fontFamily="@font/medium"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@string/plan_active"
                android:textColor="@color/colorWhite"
                android:textSize="11sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPayPremium"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_light"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/subscribe_now"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/txtTermsP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:gravity="center|end"
                android:maxLines="1"
                android:text="@string/terms_condition"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgExpandP"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:contentDescription="@string/app_image_desc"
                android:src="@drawable/icon_down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHiddenP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/pChatReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/chat_report"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pBubble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/whats_bubble"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pChatLocker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/chat_locker"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pAutoResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/auto_response"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pBulkManual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/bulk_manual_sender"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/unlimited_group"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/add_file_in_bulk_sending"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pBulkAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/bulk_automatic_sender"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pAntiBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/whatsapp_anti_ban"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_done_white"
                app:drawableTint="@color/colorTools" />

            <TextView
                android:id="@+id/pContactImport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:singleLine="true"
                android:text="@string/import_contacts_csv"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_close_red" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>